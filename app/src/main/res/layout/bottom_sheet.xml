<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/top_corner_rounded"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:drawableStart="@drawable/icon1"
        android:layout_height="wrap_content"
        android:text="Just A menu"
        android:textSize="20sp" />
    <TextView
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon2"
        android:text="Come on its just a menu"
        android:textSize="20sp"
        android:layout_marginTop="1dp"/>
    <TextView
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon3"
        android:text="You still doubting ?"
        android:textSize="20sp"
        android:layout_marginTop="1dp"/>
    <TextView
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/icon4"
        android:text="Really ?"
        android:textSize="20sp"
        android:layout_marginTop="1dp"/>
    <TextView
        android:padding="15dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/icon5"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I am done"
        android:textSize="20sp"
        android:layout_marginTop="1dp"/>
</LinearLayout>